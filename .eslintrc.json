{
  "extends": [
    "@rocketseat/eslint-config/node"
  ],
  "rules": {
    "prettier/prettier": [
      "error",
      {
        "endOfLine": "auto",
        "singleQuote": true
      }
    ],
    "semi": [
      "error",
      "always"
    ],
    "@typescript-eslint/adjacent-overload-signatures": "off",
    "no-new": "off",   
    "no-useless-constructor": "off"  
  }
}